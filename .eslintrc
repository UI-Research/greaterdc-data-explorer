{
  "env": {
    "browser": true,
    "es6": true
  },

  "extends": [
    "eslint:recommended",
    "standard-preact"
  ],

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true,
      "modules": true
    }
  },

  "rules": {
    "jsx-quotes": [ "error", "prefer-double" ]
  }
}
